	"item": [
		{
			"name": "üöÄ Quick Start",
			"item": [
				{
					"name": "Login as Developer",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.success && jsonData.data && jsonData.data.tokens) {",
									"    pm.collectionVariables.set('access_token', jsonData.data.tokens.access_token);",
									"    pm.collectionVariables.set('refresh_token', jsonData.data.tokens.refresh_token);",
									"    pm.collectionVariables.set('dev_access_token', jsonData.data.tokens.access_token);",
									"    pm.collectionVariables.set('user_code', jsonData.data.user.user_code);",
									"    console.log('Developer tokens saved! User code:', jsonData.data.user.user_code);",
									"    console.log('App access:', jsonData.data.app_access);",
									"    console.log('Feature access:', jsonData.data.feature_access);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"identifier\": \"dev@credbuzz.com\",\n    \"password\": \"Developer@123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login/",
							"host": ["{{base_url}}"],
							"path": ["auth", "login", ""]
						},
						"description": "Login as Developer using dynamic identifier. Response includes app_access and feature_access arrays.\n\n**Identifier Options:**\n- Email: dev@credbuzz.com\n- Username: developer\n- User Code: CGX0R0"
					},
					"response": []
				},
