# CredBuzz Backend - Docker Production Environment
# Copy this file to .env.docker and update with your production values

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# CRITICAL: Set to False in production!
DEBUG=False

# Generate using: python3 -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-production-key-change-this-minimum-50-chars

# Your server IP/domain (comma-separated, no spaces)
ALLOWED_HOSTS=your-server-ip,yourdomain.com,localhost

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================

DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=credbuzz_db
DATABASE_USER=credbuzz_user
DATABASE_PASSWORD=your-strong-database-password-here
DATABASE_HOST=db
DATABASE_PORT=5432

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================

# MUST be different from SECRET_KEY! Generate a new random string
JWT_SECRET_KEY=jwt-secret-different-from-secret-key-minimum-50-chars

# Token expiry times (in minutes/days)
JWT_ACCESS_TOKEN_EXPIRY_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7
JWT_INACTIVITY_TIMEOUT_MINUTES=30

# =============================================================================
# EMAIL CONFIGURATION (Gmail SMTP)
# =============================================================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=CredBuzzPay <your-email@gmail.com>

# =============================================================================
# OTP SETTINGS
# =============================================================================

OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Mobile OTP Verification Control
# Set to True to require mobile OTP verification (recommended for production)
# Set to False to bypass mobile OTP (only email OTP required)
REQUIRE_MOBILE_VERIFICATION=False

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Your frontend URLs (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=http://your-frontend-ip,https://yourdomain.com

# =============================================================================
# REDIS (Optional - for caching and Celery)
# =============================================================================

REDIS_URL=redis://redis:6379/0

# =============================================================================
# STATIC AND MEDIA FILES
# =============================================================================

STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# =============================================================================
# LOGGING
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=/app/logs/credbuzz.log

# =============================================================================
# SECURITY SETTINGS (Production)
# =============================================================================

# HTTPS Settings (enable when you have SSL certificate)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# =============================================================================
# OPTIONAL: SMS SERVICE (MSG91, Twilio, etc.)
# =============================================================================

# MSG91 Configuration
# MSG91_AUTH_KEY=your-msg91-auth-key
# MSG91_TEMPLATE_ID=your-template-id

# Twilio Configuration
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# DOCKER SPECIFIC
# =============================================================================

# Docker internal network settings
DATABASE_HOST=db
REDIS_HOST=redis
