    "version": "1.0.0",
    "contact": {
      "name": "CredbuzzPay Development Team",
      "email": "dev@credbuzz.com"
    }
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api/v1",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
