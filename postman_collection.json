  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register - Initiate",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('user_code', jsonData.user_code);",
                  "    console.log('User Code saved:', jsonData.user_code);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"mobile\": \"+919876543210\",\n  \"password\": \"SecurePass@123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register/initiate",
              "protocol": "http",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "register",
                "initiate"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Register - Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_code\": \"{{user_code}}\",\n  \"email_otp\": \"123456\",\n  \"mobile_otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register/verify-otp",
              "protocol": "http",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "register",
                "verify-otp"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('access_token', jsonData.access_token);",
                  "    pm.environment.set('refresh_token', jsonData.refresh_token);",
                  "    console.log('Tokens saved');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email_or_mobile\": \"testuser@example.com\",\n  \"password\": \"SecurePass@123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "protocol": "http",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          },
          "response": []
        },
